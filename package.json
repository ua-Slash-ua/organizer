{
  "name": "organizer",
  "version": "0.1.0",
  "private": true,
  "description": "Organizer App built with Next.js and Electron",
  "author": "Slash",
  "main": "electron/main.js",
  "scripts": {
    "dev": "dotenv -e .env cross-env next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "dotenv -e .env concurrently \"npm run dev\" \"wait-on %BASE_URL% && node node_modules/electron/cli.js .\"",
    "electron:build": "npm run build && electron-builder"
  },


  "dependencies": {
    "clsx": "^2.1.1",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "electron": "39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.organizer.app",
    "productName": "Organizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "next.config.js",
      "package.json",
      "electron.js",
      ".next/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
